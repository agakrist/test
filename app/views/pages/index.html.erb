<p id="notice"><%= notice %></p>

<h1>Pages</h1>

<table class="table">
  <thead>
    <tr>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.name %></td>
        <td><%= link_to 'Show', page %></td>
        <% if @i_am_admin %>
            <td><%= link_to 'Edit', edit_page_path(page) %></td>
            <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end  %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
  <% if @i_am_admin %>
    <%= link_to 'New Page', new_page_path %>
  <% end  %>

